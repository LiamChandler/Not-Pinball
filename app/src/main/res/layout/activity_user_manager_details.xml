<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserManager">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="buttonAddUser"
        android:text="@string/buttonAdd"
        app:layout_constraintEnd_toEndOf="@+id/textViewGetName"
        app:layout_constraintStart_toStartOf="@+id/textViewGetName"
        app:layout_constraintTop_toBottomOf="@+id/textViewGetName" />

    <EditText
        android:id="@+id/textViewGetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/getName"
        app:layout_constraintBottom_toTopOf="@+id/textViewGetName"
        app:layout_constraintEnd_toEndOf="@+id/textViewGetName"
        app:layout_constraintStart_toStartOf="@+id/textViewGetName" />
</androidx.constraintlayout.widget.ConstraintLayout>